<?xml version="1.0" encoding="utf-8" ?>
<ContentPage   xmlns="http://xamarin.com/schemas/2014/forms"
                        xmlns:prism="http://prismlibrary.com"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        prism:ViewModelLocator.AutowireViewModel="True"
                        x:Class="WorkTimeSheet.Views.Logout" Title="{Binding Title}">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label FontSize="Header" Text="Do you want to logout?"/>
        <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
            <Button FontSize="48" BackgroundColor="Green" Padding="30" CornerRadius="10" TextColor="White" Text="No" Command="{Binding NavigateToDashboardCommand}"/>
            <Button FontSize="48" BackgroundColor="Red" Padding="30" CornerRadius="10" TextColor="White" Text="Yes" Command="{Binding LogoutCommand}"/>
        </StackLayout>
    </StackLayout>
</ContentPage>